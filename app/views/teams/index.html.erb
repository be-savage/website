<div class="page-header">
  <h1>Gestion des pôles</h1>
</div>

<a href="<%= new_team_path %>" class="btn btn-default pull-right">
  <i class="fa fa-plus"></i> Nouveau
</a>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Nom</th>
      <th>Rang</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.id %></td>
        <td><%= team.label %></td>
        <td><%= team.classification %></td>
        <td>
          <div class="btn-group btn-group-sm">
            <a href="<%= edit_team_path(team) %>" class="btn btn-warning">
              <i class="fa fa-pencil"></i>
            </a>
            <a href="<%= team_path(team) %>" data-method="delete" data-confirm="Êtes-vous sur ?"
               class="btn btn-danger">
              <i class="fa fa-trash"></i>
            </a>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>