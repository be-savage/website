<h2>Passe ta commande !</h2>

<%= form_for :order, url: orders_path do |f| %>
    <p>
      <%= collection_select(:order, :place_id, @places, :id, :name, include_blank: true) %>
    </p>

    <p>
      <%= f.label :content %> <br>
      <%= f.text_area :content %>
    </p>

    <p>
      <%= f.label :author %> <br>
      <%= f.text_field :author %>
    </p>

    <%= f.submit %>
<% end %>