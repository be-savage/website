<div class="page-header">
  <h1>Liste des commandes</h1>
</div>

<table class="table table-hover datatable">
  <thead>
    <tr>
      <th>#</th>
      <th>Lieu</th>
      <th>Description</th>
      <th>Demandeur</th>
      <th>Affectation</th>
      <th>Heure de commande</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><a href="<%= order_path(order) %>"><%= order.id %></a></td>
      <td><%= order.place ? order.place.label : '' %></td>
      <td><%= order.content %></td>
      <td><%= order.author %></td>
      <td><%= order.stand ? order.stand.label : '' %></td>
      <td><%= order.created_at %></td>
      <td>
        <div class="btn-group btn-group-sm">
          <a href="<%= edit_order_path(order) %>" class="btn btn-warning">
            <i class="fa fa-pencil"></i>
          </a>
          <a href="<%= order_path(order) %>" data-method="delete" data-confirm="ÃŠtes-vous sur ?"
             class="btn btn-danger">
            <i class="fa fa-trash"></i>
          </a>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= javascript_include_tag params[:controller] %>