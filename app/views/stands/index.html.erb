<div class="page-header">
  <h1>Les stands</h1>
</div>

<a href="<%= new_stand_path %>" class="btn btn-default pull-right">
  <i class="fa fa-plus"></i> Nouveau
</a>


<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Nom</th>
      <th>Position</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @stands.each do |stand| %>
    <tr>
      <td><%= stand.id %></td>
      <td><%= stand.label %></td>
      <td><%= stand.location %></td>
      <td>
        <div class="btn-group btn-group-sm">
          <a href="<%= stand_path(stand) %>" data-method="delete"
             data-confirm="Êtes-vous sur ? Cela désaffectera toutes les commandes associées à ce stand."
             class="btn btn-danger"><i class="fa fa-trash-o"></i></a>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
